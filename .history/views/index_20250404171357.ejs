<%- include('partials/header', { 
    title: 'Visa Application',
    css: '/styles/main.css'
}) %>

<div class="container">
    <div class="spa-steps">
        <!-- Step Indicators -->
        <div class="step-indicator">
            <div class="step active" data-step="1">1</div>
            <div class="step" data-step="2">2</div>
            <div class="step" data-step="3">3</div>
        </div>

        <!-- Step 1 - Application Details -->
        <div class="step-content active" data-step="1">
            <form class="step-form" data-step="1">
                <div class="form-section">
                    <h2 class="section-title">Application Details</h2>
                    
                    <div class="form-group">
                        <label for="destination" class="form-label">Travel Destination</label>
                        <select name="destination" id="destination" class="form-select" required>
                            <option value="">Select Country</option>
                            <% countries.forEach(country => { %>
                                <option value="<%= country %>"><%= country %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="visaType" class="form-label">Visa Type</label>
                        <select name="visaType" id="visaType" class="form-select" required>
                            <option value="">Select Visa Type</option>
                            <option value="Tourist">Tourist Visa</option>
                            <option value="Business">Business Visa</option>
                            <option value="Diversity">Diversity Visa (Green Card)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="citizenship" class="form-label">Your Citizenship</label>
                        <select name="citizenship" id="citizenship" class="form-select" required>
                            <option value="">Select Country</option>
                            <% countries.forEach(country => { %>
                                <option value="<%= country %>"><%= country %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" data-next class="btn-primary">
                        Continue →
                    </button>
                </div>
            </form>
        </div>

        <!-- Step 2 - Personal Details -->
        <div class="step-content" data-step="2">
            <div class="preview-section">
                <h3>Application Preview</h3>
                <div class="preview-grid">
                    <div class="preview-item">
                        <span>Destination:</span>
                        <strong id="preview-destination"></strong>
                    </div>
                    <div class="preview-item">
                        <span>Visa Type:</span>
                        <strong id="preview-visaType"></strong>
                    </div>
                    <div class="preview-item">
                        <span>Citizenship:</span>
                        <strong id="preview-citizenship"></strong>
                    </div>
                </div>
            </div>

            <form class="step-form" data-step="2">
                <div class="info-box">
                    <h4>Important Information</h4>
                    <p>Welcome to the online application!</p>
                    <p>We know this can be a time-consuming process, but we've minimized the information required.</p>
                    <p>Visa validity starts from date of issuance</p>
                    <p>We'll contact you via email for any follow-up</p>
                </div>

                <div class="form-group">
                    <label for="email">Contact E-mail</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="phone">Contact Phone Number</label>
                    <input type="tel" name="phone" id="phone" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="passportCitizenship">Passport Citizenship</label>
                    <select name="passportCitizenship" id="passportCitizenship" class="form-control" required>
                        <option value="">Select Country</option>
                        <% countries.forEach(country => { %>
                            <option value="<%= country %>"><%= country %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="firstName">First Name (as in passport)</label>
                    <input type="text" name="firstName" id="firstName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name (as in passport)</label>
                    <input type="text" name="lastName" id="lastName" class="form-control" required>
                </div>

                <div class="form-actions">
                    <button type="button" data-prev class="btn-secondary">← Back</button>
                    <button type="button" data-next class="btn-primary">Continue →</button>
                </div>
            </form>
        </div>

        <!-- Step 3 - Payment -->
        <div class="step-content" data-step="3">
            <div class="payment-summary">
                <h2 class="section-title">Payment Summary</h2>
                <div class="total-amount">
                    <span>Total Amount:</span>
                    <span>ZAR 4,200.00</span>
                </div>
            </div>

            <form id="payment-form" class="step-form" data-step="3">
                <div class="payment-selection">
                    <h3>Select Payment Method</h3>
                    <label class="payment-method-label">
                        <input type="radio" name="paymentMethod" value="bank" required>
                        Bank Transfer
                    </label>
                    <label class="payment-method-label">
                        <input type="radio" name="paymentMethod" value="crypto" required>
                        Cryptocurrency
                    </label>
                </div>

                <div id="payment-details">
                    <!-- Bank Details -->
                    <div id="bank-details-section">
                        <div class="method-card">
                            <h3 class="method-title">Bank Transfer</h3>
                            <div class="bank-details">
                                <div class="detail-item">
                                    <span>Bank:</span>
                                    <strong>FNB BANK</strong>
                                </div>
                                <div class="detail-item">
                                    <span>Account Number:</span>
                                    <strong>62509963139</strong>
                                </div>
                                <div class="detail-item">
                                    <span>Reference:</span>
                                    <strong>0672626266</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Crypto Details -->
                    <div id="crypto-details-section">
                        <div class="method-card">
                            <h3 class="method-title">Cryptocurrency</h3>
                            <div class="crypto-methods">
                                <div class="crypto-option">
                                    <div class="crypto-header">
                                        <span class="crypto-name">Bitcoin</span>
                                        <button type="button" class="copy-btn" data-address="3Liim5xHAkLEgUjzfw2DNFqbEkzaXgWWu8">
                                            Copy Address
                                        </button>
                                    </div>
                                    <div class="crypto-address">3Liim5xHAkLEgUjzfw2DNFqbEkzaXgWWu8</div>
                                </div>
                                <!-- Add other crypto options similarly -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="receipt-upload">
                    <h3 class="upload-title">Upload Payment Receipt</h3>
                    <input type="file" name="receipt" id="receipt" accept=".pdf,.jpg,.jpeg,.png" required>
                    <p class="upload-note">Supported formats: PDF, JPG, PNG (Max 5MB)</p>
                </div>

                <div class="form-actions">
                    <button type="button" data-prev class="btn-secondary">← Back</button>
                    <button type="button" id="final-submit" class="btn-primary">
                        Submit Application
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Error Container -->
    <div id="error-container" class="error-message" style="display: none;"></div>
</div>

<script src="/js/app.js"></script>
<%- include('partials/footer') %>