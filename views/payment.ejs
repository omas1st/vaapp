<%- include('partials/header', { 
    title: 'Payment Details - Step 3/3',
    css: '/styles/payment.css'
}) %>

<div class="container">
    <div class="payment-summary">
        <h2 class="section-title">Payment Summary</h2>
        <div class="total-amount">
            <span>Total Amount:</span>
            <span>AUD 4,500.00</span>
        </div>
    </div>

    <form id="payment-form" class="payment-form">
        <!-- Payment method selection -->
        <div class="payment-selection">
            <h3>Select Payment Method</h3>
            <label class="payment-method-label">
                <input type="radio" name="paymentMethod" value="bank" required>
                Bank Transfer
            </label>
            <label class="payment-method-label">
                <input type="radio" name="paymentMethod" value="crypto" required>
                Cryptocurrency
            </label>
        </div>

        <!-- Payment method details are hidden by default and will display based on user selection -->
        <div id="payment-details">
            <div id="bank-details-section" style="display: none;">
                <div class="method-card">
                    <h3 class="method-title">Bank Transfer/Deposit</h3>
                    <div class="bank-details">
                        <div class="detail-item">
                            <span>Bank:</span>
                            <strong>Ubank</strong>
                        </div>
                        <div class="detail-item">
                            <span>Account Name:</span>
                            <strong>Rajib Uzzaman</strong>
                        </div>
                        <div class="detail-item">
                            <span>Account Number:</span>
                            <strong>35246894</strong>
                        </div>
                        <div class="detail-item">
                            <span>BSB:</span>
                            <strong>670864</strong>
                        </div>
                        <div class="note">Required Payment: AUD 4,500</div>
                    </div>
                </div>
            </div>

            <div id="crypto-details-section" style="display: none;">
                <div class="method-card">
                    <h3 class="method-title">Cryptocurrency Payment</h3>
                    <div class="crypto-methods">
                        <div class="crypto-option">
                            <div class="crypto-header">
                                <span class="crypto-name">Bitcoin</span>
                                <button type="button" class="copy-btn" data-address="3HtMpBxxA8EkiHnoyD5SyyP7GLVinJE5r6">
                                    Copy Address
                                </button>
                            </div>
                            <div class="crypto-address">3HtMpBxxA8EkiHnoyD5SyyP7GLVinJE5r6</div>
                        </div>

                        <div class="crypto-option">
                            <div class="crypto-header">
                                <span class="crypto-name">Ethereum</span>
                                <button type="button" class="copy-btn" data-address="0xa6aE31c722BdDC9A645136891749AA7Fd38519c0">
                                    Copy Address
                                </button>
                            </div>
                            <div class="crypto-address">0xa6aE31c722BdDC9A645136891749AA7Fd38519c0</div>
                        </div>

                        <div class="crypto-option">
                            <div class="crypto-header">
                                <span class="crypto-name">USDT (Tether)</span>
                                <button type="button" class="copy-btn" data-address="0x9d2b366Ed9D2b335936C44443281caA92bFd01EB">
                                    Copy Address
                                </button>
                            </div>
                            <div class="crypto-address">0x9d2b366Ed9D2b335936C44443281caA92bFd01EB</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment confirmation checkbox -->
        <div class="payment-confirmation">
            <label>
                <input type="checkbox" name="paymentConfirmation" id="payment-confirmation-checkbox">
                I have successfully made the payment
            </label>
        </div>

        <!-- Message display area -->
        <div id="payment-message" style="display: none; color: #d9534f; font-weight: bold; margin: 15px 0; padding: 10px; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 4px;"></div>

        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                ‚Üê Back
            </button>
            <button type="button" id="submit-btn" class="btn btn-primary">
                Submit Application
            </button>
        </div>
    </form>
</div>

<script>
    // Copy address functionality
    document.querySelectorAll('.copy-btn').forEach(button => {
        button.addEventListener('click', () => {
            const address = button.getAttribute('data-address');
            navigator.clipboard.writeText(address).then(() => {
                button.textContent = 'Copied!';
                setTimeout(() => button.textContent = 'Copy Address', 2000);
            });
        });
    });

    // Show/hide payment details based on selection
    const paymentMethodRadios = document.getElementsByName('paymentMethod');
    const bankSection = document.getElementById('bank-details-section');
    const cryptoSection = document.getElementById('crypto-details-section');

    paymentMethodRadios.forEach(radio => {
        radio.addEventListener('change', () => {
            bankSection.style.display = radio.value === 'bank' ? 'block' : 'none';
            cryptoSection.style.display = radio.value === 'crypto' ? 'block' : 'none';
        });
    });

    // Handle submit button click - always show message and prevent any form submission/redirection
    const submitBtn = document.getElementById('submit-btn');
    const paymentMessage = document.getElementById('payment-message');
    const paymentConfirmationCheckbox = document.getElementById('payment-confirmation-checkbox');

    // Remove any form submission capabilities
    const paymentForm = document.getElementById('payment-form');
    paymentForm.addEventListener('submit', function(e) {
        e.preventDefault();
        return false;
    });

    // Submit button click handler - always show message and prevent any action
    submitBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Always show the payment message
        paymentMessage.textContent = 'Kindly make payment of AUD 4,500.';
        paymentMessage.style.display = 'block';
        
        // Hide message after 5 seconds
        setTimeout(() => {
            paymentMessage.style.display = 'none';
        }, 5000);
        
        // Prevent any form submission or redirection
        return false;
    });

    // Make checkbox non-functional (it won't enable the button or allow submission)
    paymentConfirmationCheckbox.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Show message when checkbox is clicked
        paymentMessage.textContent = 'Kindly make payment of AUD 4,500.';
        paymentMessage.style.display = 'block';
        
        // Hide message after 5 seconds
        setTimeout(() => {
            paymentMessage.style.display = 'none';
        }, 5000);
        
        // Prevent checkbox from being checked
        this.checked = false;
        return false;
    });

    // Additional prevention for checkbox changes
    paymentConfirmationCheckbox.addEventListener('change', function(e) {
        e.preventDefault();
        this.checked = false;
        return false;
    });
</script>

<%- include('partials/footer') %>
